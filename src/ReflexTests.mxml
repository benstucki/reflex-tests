<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/halo" 
			   creationComplete="init()" xmlns:unit="http://www.adobe.com/2009/flexUnitUIRunner">
	
	<fx:Script>
		<![CDATA[
			import com.allurent.coverage.runtime.CoverageManager;
			
			import org.flexunit.listeners.CIListener;
			import org.flexunit.listeners.UIListener;
			import org.flexunit.runner.FlexUnitCore;
			
			import reflex.tests.ReflexSuite;
			
			private var core:FlexUnitCore;
			
			private function init():void {
				var core:FlexUnitCore = new FlexUnitCore();
				core.addListener( new UIListener( runner ) );
				core.addListener( new CIListener() );
				//core.addListener( new TraceListener() );
				core.run( ReflexSuite );
				
			}
			 
		]]>
	</fx:Script>
	
	<unit:TestRunnerBase id="runner" left="10" right="10" top="10" bottom="10" testsComplete="CoverageManager.exit()" />
	
</s:Application>